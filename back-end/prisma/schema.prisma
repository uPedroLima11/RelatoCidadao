generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}



model Usuario {
  id       Int      @id @default(autoincrement())
  email    String   @unique
  nome     String
  senha    String
  postagens Postagem[]
}

model Postagem {
  id          Int      @id @default(autoincrement())
  titulo      String
  descricao   String
  localizacao String
  foto        String
  estadoId    Int
  cidadeId    Int
  createdAt   DateTime @default(now())
  usuarioId   Int
  usuario     Usuario  @relation(fields: [usuarioId], references: [id])

  @@map("postagens")
}
